<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <!--android:fitsSystemWindows="true"
    android:clipToPadding="true"-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:src="@drawable/login_top"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/login_user_avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:src="@drawable/head_logo"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_tablet_android_black_24dp"/>

        <EditText
            android:id="@+id/login_phone"
            android:layout_width="120dp"
            android:layout_height="match_parent"  
            android:background="@color/transparent"
            android:layout_marginLeft="40dp"
            android:cursorVisible="true"
            android:textCursorDrawable="@drawable/color_cursor_edittext"
            android:maxLength="11"
            android:textColor="@color/black"
            android:inputType="number"
            android:textSize="14sp"
            android:hint="输入手机号" />

        <Button
            android:id="@+id/tv_login_getcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:text="获取验证码"
            android:textColor="@color/red_black"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="1dp"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/login_pwd"
            android:background="@color/transparent"/>
    </RelativeLayout>

    <View 
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/red_black"/>
    
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:src="@drawable/ic_https_black_24dp"/>

        <EditText
            android:id="@+id/login_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"   
            android:layout_marginLeft="40dp"
            android:cursorVisible="true"
            android:textCursorDrawable="@drawable/color_cursor_edittext"
            android:background="@color/transparent"
            android:textColor="@color/black"
            android:inputType="number"           
            android:hint="输入验证码"
            android:textSize="14sp"
            android:maxLength="6" />

    </RelativeLayout>

     <View 
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/red_black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="登录即代表同意"
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="《用户协议》"
            android:textColor="@color/red_black"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="验证并登录"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:background="@drawable/shape_circle"/>

</LinearLayout>
